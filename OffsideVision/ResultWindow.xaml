<Window x:Class="OffsideVision.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Résultat de l'Analyse"
        Height="800"
        Width="1200"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <TextBlock Text="✕" 
                                       FontSize="16"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFE1E1"/>
                                <Setter Property="Foreground" Value="#FF4444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#FFFFFF"
            CornerRadius="20"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15"
                              ShadowDepth="0"
                              Opacity="0.1" />
        </Border.Effect>

        <Grid>
            <!-- Barre de titre -->
            <Border Height="50"
                    VerticalAlignment="Top"
                    Background="Transparent"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid>
                    <StackPanel Orientation="Horizontal"
                                Margin="20,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="Résultat de l'Analyse"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#212529" />
                    </StackPanel>

                    <Button Style="{StaticResource CloseButtonStyle}"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0"
                            Click="CloseButton_Click" />
                </Grid>
            </Border>

            <!-- Conteneur principal -->
            <Border Margin="10,60,10,10"
                    Background="#F8F9FA"
                    CornerRadius="15">
                <Grid>
                    <!-- Zone de l'image -->
                    <Border Background="White"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="#E9ECEF">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10"
                                              ShadowDepth="0"
                                              Opacity="0.1" />
                        </Border.Effect>

                        <Image x:Name="ResultImage"
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <!-- Indicateur de chargement (optionnel) -->
                    <Grid x:Name="LoadingOverlay"
                          Background="#80FFFFFF"
                          Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Chargement..."
                                       FontSize="16"
                                       Foreground="#4361EE"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
