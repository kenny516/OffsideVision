<Window x:Class="OffsideVision.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Résultat de l'Analyse"
        Height="800"
        Width="1200"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F5F6F7">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Titre de la fenêtre -->
        <TextBlock Grid.Row="0"
                   Text="Résultat de l'Analyse"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="#212529"
                   HorizontalAlignment="Center"
                   Margin="0,10" />

        <!-- Conteneur principal -->
        <Grid Grid.Row="1" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="10" /> <!-- Espace entre les deux colonnes -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Zone de l'image initiale -->
            <Border Background="White"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#E9ECEF"
                    Margin="10"
                    Grid.Column="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" />
                </Border.Effect>
                <Grid>
                    <Image x:Name="InitialImage"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Séparateur (vide) -->
            <Border Background="Transparent" Grid.Column="1" />

            <!-- Zone de l'image analysée -->
            <Border Background="White"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="#E9ECEF"
                    Margin="10"
                    Grid.Column="2">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1" />
                </Border.Effect>
                <Grid>
                    <Image x:Name="ResultImage"
                           Stretch="Uniform"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
